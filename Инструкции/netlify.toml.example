# Netlify Configuration для Telegram API

[build]
  functions = "api"

[build.environment]
  TELEGRAM_BOT_TOKEN = "<SET_IN_NETLIFY_UI>"
  TELEGRAM_CHAT_ID = "<SET_IN_NETLIFY_UI>"

# Redirects для API endpoint
[[redirects]]
  from = "/.netlify/functions/telegram"
  to = "/api/telegram"
  status = 200

# Security headers
[[headers]]
  for = "/api/*"
  [headers.values]
    X-Frame-Options = "DENY"
    X-Content-Type-Options = "nosniff"
    X-XSS-Protection = "1; mode=block"
    Referrer-Policy = "strict-origin-when-cross-origin"

